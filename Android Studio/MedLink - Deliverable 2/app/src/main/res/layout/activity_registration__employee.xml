<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_Employee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_activitypg"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="141dp" />

        <ImageView
            android:id="@+id/title_createacc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/title_createacc" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/title_aboutyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/title_aboutyou" />

                <EditText
                    android:id="@+id/input_clinicname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_icon_name"
                    android:ems="10"
                    android:hint="clinic name"
                    android:paddingLeft="50dp" />


                <Space
                    android:layout_width="411dp"
                    android:layout_height="14dp" />

                <EditText
                    android:id="@+id/input_housenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_housenum"
                    android:hint="house #"
                    android:inputType="phone"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_address"
                    android:ems="10"
                    android:hint="street"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_address"
                    android:ems="10"
                    android:hint="city"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_address"
                    android:ems="10"
                    android:hint="province"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_postalcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_address"
                    android:ems="10"
                    android:hint="postal code"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_address"
                    android:ems="10"
                    android:hint="country"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />


                <EditText
                    android:id="@+id/input_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_phone"
                    android:ems="10"
                    android:hint="phone number"
                    android:inputType="phone"
                    android:paddingLeft="50dp" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <ImageView
                    android:id="@+id/title_accountdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/title_aboutaccount" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_email"
                    android:ems="10"
                    android:hint="email"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_icon_name"
                    android:ems="10"
                    android:hint="username"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/input_password"
                    android:ems="10"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:paddingLeft="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <Button
                    android:id="@+id/btn_toreg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/icon_next" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>