<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageServices">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_activitypg"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="140dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="141dp" />

        <ImageView
            android:id="@+id/title_manageservices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/title_manageservices" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/input_categoryname"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_categoryrole"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Role"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_createcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_new_service" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <ListView
            android:id="@+id/listviewCategories"
            android:layout_width="match_parent"
            android:paddingLeft="40dp"
            android:layout_height="wrap_content">

        </ListView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>